{
    "manifest_version": 3,
    "name": "Club Fidelidad - Integrador",
    "version": "1.0",
    "description": "Integra tu facturador con el club de fidelidad",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://*.facturacion.com.ar/*",
        "https://*.vercel.app/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.facturacion.com.ar/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "all_frames": true
        }
    ]
}