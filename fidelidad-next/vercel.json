{
    "functions": {
        "api/*.js": {
            "runtime": "nodejs18",
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}